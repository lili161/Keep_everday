<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView android:layout_width="649dp"
               android:layout_height="816dp"
               android:background="@color/colorPrimary"
               tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>
    <TextView android:id="@+id/text"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:text="开始打卡"
              android:textAlignment="center"
              android:textSize="60dp"
              android:layout_marginTop="80dp" android:layout_marginBottom="7dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/see_data"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button android:onClick="insert_test"
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:text="打卡"
            android:textSize="60dp"
            app:layout_constraintTop_toBottomOf="@+id/see_data" android:layout_marginBottom="72dp"
            app:layout_constraintEnd_toEndOf="@+id/see_data" app:layout_constraintStart_toStartOf="@+id/see_data"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button android:onClick="insert_test"
            android:id="@+id/see_data"
            android:layout_width="219dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:text="查看"
            android:textSize="60dp"
            app:layout_constraintStart_toStartOf="@+id/text" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" app:layout_constraintTop_toBottomOf="@+id/text"
            android:layout_marginBottom="41dp" app:layout_constraintBottom_toTopOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>